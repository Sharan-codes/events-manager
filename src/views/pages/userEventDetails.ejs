<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <title><%= event.eventName %></title>
  <!-- MDB icon -->
  <link rel="icon" href="img/mdb-favicon.ico" type="image/x-icon">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
  <!-- Google Fonts -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
  <!-- Bootstrap core CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
  <!-- Material Design Bootstrap -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.12.0/css/mdb.min.css" rel="stylesheet">
  <!-- Your custom styles (optional) -->
  <link rel="stylesheet" href="css/eventDetails.css" type="text/html">
  <style>
    body {font-family: Arial, Helvetica, sans-serif;}
    * {box-sizing: border-box;}
    
    /* Button used to open the contact form - fixed at the bottom of the page */
    .open-button {
      background-color: #555;
      color: white;
      padding: 16px 20px;
      border: none;
      cursor: pointer;
      opacity: 0.8;
      bottom: 8%;
      right: 9%;
      width: 280px;
    }
    
    /* The popup form - hidden by default */
    .form-popup {
      display: none;
      position: fixed;
      bottom: 17%;
      right: 10%;
      border: 3px solid #f1f1f1;
      z-index: 9;
    }
    
    /* Add styles to the form container */
    .form-container {
      max-width: 300px;
      padding: 10px;
      background-color: white;
    }
    
    /* Full-width input fields */
    .form-container input[type=text], .form-container input[type=password] {
      width: 100%;
      padding: 15px;
      margin: 5px 0 22px 0;
      border: none;
      background: #f1f1f1;
    }
    
    /* When the inputs get focus, do something */
    .form-container input[type=text]:focus, .form-container input[type=password]:focus {
      background-color: #ddd;
      outline: none;
    }
    
    /* Set a style for the submit/login button */
    .form-container .btn {
      background-color: #4CAF50;
      color: white;
      padding: 16px 20px;
      border: none;
      cursor: pointer;
      width: 100%;
      margin-bottom:10px;
      opacity: 0.8;
    }
    
    /* Add a red background color to the cancel button */
    .form-container .cancel {
      background-color: red;
    }
    
    /* Add some hover effects to buttons */
    .form-container .btn:hover, .open-button:hover {
      opacity: 1;
    }

    .like:hover {color: gold;}

    .input--style-5 {
      background: #e5e5e5;
      line-height: 30px;
      -webkit-border-radius: 5px;
      -moz-border-radius: 5px;
      border-radius: 5px;
      padding: 0 22px;
      font-size: 16px;
      color: #555;
    }
    </style>
</head>
<body onload="loadLike()" >
    <div class="container">
  <div class="row mt-5">
    <div class="col-md-6">
      <h1><%= event.eventName %></h1>
    </div>
    <div class="col-md-6">
      <a href="/logout"><button class="btn btn-outline-dark float-right">Logout</button></a>
    </div>
    </div>
<div class="col-md-12 mt-3 bg-dark pb-2">
    <h2 class="text-secondary pt-4 mt-4">what's it about ?</h2>
    <div class="container bg-secondary">
        <p class="text-light p-4"><%= event.description %></p>
    </div>
</div>
<div class="col-md-12 bg-secondary p-3">
<div class="col-md-6 bg-secondary float-left">
    <h5 class="text-dark p-3">Booking start time : <%= event.bookStartTime %></h5>
</div>
<div class="col-md-6 bg-secondary offset-5">
    <h5 class="text-dark p-3">Booking end time : <%= event.bookEndTime %></h5 >
</div>
</div>
<div class="col-md-12  bg-dark pb-5">
<div class="col-md-3 float-left offset-1 mt-2">
    <h5 class="text-warning">Ticket price : <%= event.ticketPrice %></h5 >
</div>

<div class="col-md-3 float-left offset-1 mt-2">
    <h5 class="text-light">Total tickets : <%= event.totalTickets %></h5>
</div>
<div class="col-md-3 float-left offset-1 mt-2">
  <h5 class="text-light"><%= event.availableTickets %> tickets left!!! </h5 >
</div>

</div>
<div class="col-md-12  bg-dark mt-1 p-2 text-light">
  <div class="col-md-3">
    <h3 class="float-left mt-2">Like</h3>
  </div>

<i class="fa like fa-thumbs-up fa-2x ml-5 float-left mt-2" id="likes"></i>
<h3 class="float-left ml-2 text-warning mt-2" id="likesNum">N</h3>
<button class="open-button offset-7" onclick="openForm()">BOOK NOW</button>
</div>

<div class="form-popup" id="buyForm">
    <form action="/buyTickets?eventName=<%= event.eventName %>" method="POST" class="form-container">
      <h1>Buy</h1> 
  
      <label for="numTickets"><b>Tickets :</b></label>
      <input id="ticketsNo" type="text" placeholder="Enter the no. of tickets" name="numTickets" required>
     
      <button type="submit" class="btn" onclick="ticketsUnavailable()">Buy</button>
      <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
    </form>
</div>
<div class="col-md-12 mt-3">
  <div class="input-group">
    <h3 class="mt-2 ml-1">COMMENT</h3>
      <textarea rows = "2" cols = "90" class="input--style-5 ml-2" type="text" id="comment" required></textarea>
      <button class="btn btn-dark ml-4" id="commentbtn">></button>
  </div>
</div>

<table id="dtVerticalScrollExample" class="table table-striped table-bordered mt-5" cellspacing="0" width="100%">
  <thead>
      <tr>
        <th colspan="2">COMMENTS</th>
      </tr>
    </thead>
    <tbody>
      <%if (records.length >0){ %>
      <% records.forEach(function(row){ %>
      <tr>
        <td class="h4"><%= row.userName %></td>
        <td><%= row.comment %></td>
      </tr>
      <% })}else{ %>
        <tr>
            <td colspan="2">No comments</td>   
          </tr>
        <% } %>
    </tbody>
  </table>

</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    function openForm() {
      document.getElementById("buyForm").style.display = "block";
    }
    
    function closeForm() {
      document.getElementById("buyForm").style.display = "none";
    }
    function ticketsUnavailable() {
      var ticketsneeded = document.getElementById("ticketsNo").value;
      if (ticketsneeded > <%= event.availableTickets %>)
      {
        alert("Only <%= event.availableTickets %> tickets left");
      }else if(ticketsneeded=='')
      {
        alert("Enter a number");
      }else
      {
        alert(ticketsneeded+" tickets bought");
      }
    }
    function loadLike() {
      var x = document.getElementById("likes");
      var y = document.getElementById("likesNum");
      y.innerHTML = <%= totalLikes %>;
      var isLiked = <%= isLiked %>;
      if(isLiked === 1)
      {
        x.style.color = 'gold';
      }
    }
    $('#likes').click(function() {
      var x = document.getElementById("likes");
      var y = document.getElementById("likesNum");
      var numLikes = <%= totalLikes %>;
      var isLiked = <%= isLiked %>;
      var z = numLikes-isLiked;
      if(x.style.color==='gold')
      {
        x.style.color = 'lightgrey';
        z = z;
        isLiked = 0;
        y.innerHTML = z;
      }
      else{
        x.style.color = 'gold';
        z = z+1;
        isLiked = 1;
        y.innerHTML = z;
      }
    $.ajax({
        global: false,
        type: 'POST',
        url: '/like',
        data: {
          eventName: "<%= event.eventName %>",
          liked: isLiked
        },
        success: function (result) {
            console.log(result);
        },
        error: function (request, status, error) {
            serviceError();
        }
    });
});

$('#commentbtn').click(function() {
    var comment = document.getElementById("comment").value;
    if(comment === '') {
      alert("Type a comment.");
    }
    else {
    
      $.ajax({
          global: false,
          type: 'POST',
          url: '/comment',
          data: {
            eventName: "<%= event.eventName %>",
            comment: comment
          },
          success: function (result) {
              alert("Comment submitted");
              console.log(result);
          },
          error: function (request, status, error) {
              serviceError();
          }
      });
    }
});
    </script>
</body>
</html>
