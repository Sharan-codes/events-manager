<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <title>ADMIN : View Events</title>
  <!-- MDB icon -->
  <link rel="icon" href="img/mdb-favicon.ico" type="image/x-icon">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
  <!-- Google Fonts -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
  <!-- Bootstrap core CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
  <!-- Material Design Bootstrap -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.12.0/css/mdb.min.css" rel="stylesheet">
  <!-- Your custom styles (optional) -->
  <link rel="stylesheet" href="css/table.css" type="text/css">
</head>
<body>  
<div class="row">
  <div class="col-md-11">
    <a href="/logout"><button class="btn btn-outline-dark float-right">Logout</button></a>
  </div>
</div>
  <div class="col-md-10 offset-1">
<table id="dtVerticalScrollExample" class="table table-striped table-bordered table- mt-5" cellspacing="0"
  width="100%" height="10%">
  <thead>
      <tr>
        <th>Event ID</th>
        <th>Event name</th>
        <th>Booking start time</th>
        <th>Booking end time</th>
        <th>Ticket price</th>
        <th>Total tickets</th>
        <th>Available tickets</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%if (records.length >0){ %>
      <% records.forEach(function(row){ %>
      <tr>
        <td><%= row.eventId %></td>
        <td><%= row.eventName %></td>
        <td><%= row.bookStartTime %></td>
        <td><%= row.bookEndTime %></tdonload="myFunction()">
        <td><%= row.ticketPrice %></td>
        <td><%= row.totalTickets %></td>
        <td><%= row.availableTickets %></td>
        <td><%= row.status %></td>
        <!-- <td><a href="/eventDetails?eventName=<%= row.eventName %>&bookStartTime=<%= row.bookStartTime %>&bookEndTime=<%= row.bookEndTime %>&ticketPrice=<%= row.ticketPrice %>&totalTickets=<%= row.totalTickets %>&availableTickets=<%= row.availableTickets %>&status=<%= row.status %>" > -->
        <td><a href="/adminEventDetails?eventId=<%= row.eventId %>&eventName=<%= row.eventName %>">
            <button class="btn btn-primary">VIEW</button></a></td>
      </tr>
      <% })}else{ %>
        <tr>
            <td colspan="8">Bookings not open for any events now</td>   
          </tr>
        <% } %>
    </tbody>
    <tfoot>
      <tr>
        <th>Event ID</th>
        <th>Event name</th>
        <th>Booking start time</th>
        <th>Booking end time</th>
        <th>Ticket price</th>
        <th>Total tickets</th>
        <th>Available tickets</th>
        <th>Status</th>
        <th></th>
      </tr>
    </tfoot>
  </table>
</div>
</body>
</html>
